<!DOCTYPE html>
<html>

<% include templates/head %>

<body id='landing'>

<nav class='nav-roundslide'>
	<ul class='show-for-medium-up hide-for-touch'>
		<li>
			<a class='dotstyle current' href='#home'>
				<h1>Home</h1>
			</a>
		</li>
		<li>
			<a class='dotstyle' href='#projects'>
				<h1>Projects</h1>
			</a>
		</li>
		<li>
			<a class='dotstyle' href='#about'>
				<h1>About</h1>
			</a>
		</li>		
	</ul>
</nav>

<!-- ABOUT ME SECTION -->
<section id='home'>
	<div class='twinkle'></div>
	<div class='section-wrapper'>
		<div class='intro pull-down'>
			<div class='logo-wrapper center'>
				<img src='images/EZlogo.png' alt='personal logo'>
			</div>
			<div class='intro-text center'>
				<h3>Hi, I'm Elaine</h3>
				<p><i>@zhoufosho</i></p>
			</div>
			<div class='img-wrapper arrow center'>
				<a href='#projects'><img src='images/arrow.png'></a>
			</div>
		</div>
	</div>
</section>

<div class='clearfix'></div>

<!-- PROJECTS SECTION -->
<section id='projects'>
	<div class='row'>
		<div class='large-12 large-centered columns'>
			<!-- <h3 class='section-title'>Projects</h3> -->
			<ul class='tiles'>
				<% for(var i=0; i<projects.length; i++) { %>
					<% var project = projects[i] %>
					<% if (i % 3 == 0) { %>
					<div class='row tile-row'>
						<li class='medium-7 large-8 columns tile major' id='<%- project.slug %>'>
					<% } else {  %>
						<li class='medium-5 large-4 columns tile minor' id='<%- project.slug %>'>
					<% } %>
							
						<div class='tile-img'>
							<div class='inner' style='background-image: url("<%- project.img %>")'></div>
						</div>
						<div class='tile-text'>
							<div class='row'>
								<% if(i % 3 == 0) { %>
								<div class='medium-11 large-10 columns'>
									<h4 class='title-underline'><%- project.name %></h4>
									<div class='proj-content'><p><%- project.content %></p></div>
								<% } else { %>
								<div class='medium-11 large-11 columns'>
									<h5 class='title-underline'><%- project.name %></h5>
									<div class='proj-content'><p><%- project.content %></p></div>
								<% } %>
								</div>
								<span class='more-triangle'>
									<i class='fa fa-long-arrow-right fa-lg'></i>
								</span>
							</div>
						</div>
						</li>
					<% if (i % 3 == 2) { %>
					</div>
					<% } %>
				<% } %>
			</ul>
		</div>
</div>
</section>


<!-- ABOUT ME SECTION -->
<section id='about'>
	<div class='row'>
		<div class='small-12 medium-5 large-4 columns tile blurb'>
			<div class='tile-img-light center'>
				<img src='images/elainecircle.png' class='bio-img' alt='Elaine Zhou, headshot'>
			</div>
			<div class='tile-text center'>
				<h4 class='title-underline'>Elaine Zhou</h4>
				<ul class='centered-list'>
					<li><p>Stanford, Computer Science '15</p></li>
					<!-- <li><p>Software Engineer &amp; Designer</p></li> -->
					<li><p><a href='mailto:elainez@cs.stanford.edu'>elainez@cs.stanford.edu</a></p></li>
				</ul>
				<ul class='social-media centered-inline-list'>
					<li><a href='http://facebook.com/zhoufosho' target='_blank'><i class='fa fa-facebook'></i></a></li>
					<li><a href='http://instagram.com/zhoufosho' target='_blank'><i class='fa fa-instagram'></i></a></li>
					<li><a href='https://www.linkedin.com/in/elainexzhou' target='_blank'><i class='fa fa-linkedin'></i></a></li>
				</ul>
			</div>
		</div>
		<div class='medium-7 large-8 columns tile about show-for-medium-up'>
			<div class='tile-text'>
